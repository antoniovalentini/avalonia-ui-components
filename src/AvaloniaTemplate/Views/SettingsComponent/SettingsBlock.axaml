<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:AvaloniaTemplate.Views.SettingsComponent">
  <Design.PreviewWith>
    <controls:SettingsBlock />
  </Design.PreviewWith>

  <Style Selector="controls|SettingsBlock">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        <Grid RowDefinitions="*, *">
          <TextBlock Text="{TemplateBinding BlockTitle}" FontSize="14" Margin="10" Foreground="#666666" FontWeight="Medium"/>
          <Border Grid.Row="1" Background="#f5f5fa" CornerRadius="10" Padding="20 10">
            <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding Template}" />
          </Border>
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
