<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="540" d:DesignHeight="960"
             x:Class="AvaloniaTemplate.Views.SelectionView">
  <Grid ColumnDefinitions="*, 15*, *">
    <StackPanel Grid.Column="1" Spacing="10" Margin="0,10"
                VerticalAlignment="Center">
      <Button Content="LOGIN" Click="NavigateTo_OnClick" Tag="LoginView"
              HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
      <Button Content="RALLY" Click="NavigateTo_OnClick" Tag="RallyMaterialView"
              HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
      <Button Content="SETTINGS" Click="NavigateTo_OnClick" Tag="SettingsView"
              HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
    </StackPanel>
  </Grid>
</UserControl>
